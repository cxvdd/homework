#include<iostream>
using namespace std;
int main() {
    setlocale(LC_ALL, "rus");
    char ch;
    cout << "Пожалуйста введите число: ";
    cin >> ch;
    if (ch > 47 && ch < 58) {
        cout << "Символ является цифровым";
    }
    else if ((ch >= 97 && ch <= 122)) {
        cout << "Символ - строчная буква";
    }
    else {
        if (ch == 44  ch == 45  ch == 95 || ch == 126) {
            cout << "Символ - символ препинания";
        }
        else {
            cout << "Символ не является ни цифрой, ни буквой, ни символом препинания";
    cout << "Введите время разговора в минутах: ";
      int time_of_call;
      cin >> time_of_call;
      cout << "Выберите оператора, которому вы звоните: ";
      char choice;
      cin >> choice;
      switch (choice) {
      case 'M':
          cout << "Вы выбрали оператора МТС. Стоимость разговора: " //Написать ""
              << time_of_call * 0.50 << " рублей." << endl;
          break;
      case 'O':
          cout << "Вы выбрали оператора Мегафон. Стоимость разговора: " //Написать "O"
              << time_of_call * 0.7 << " рублей." << endl;
          break;
      case 'B':
          cout << "Вы выбрали оператора Билайн. Стоимость разговора: " //Написать "B"
              << time_of_call * 0.40 << " рублей." << endl;
              break;
      default:
          cout << "Оператор не выбран. Пожалуйста, введите корректные данные." << endl;
      }
      return 0;
  }
     }
  } 
